<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Required_Field_when_Industry_updated</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISPICKVAL(Industry, &quot;&quot;)),
ISBLANK( AnnualRevenue )
)</errorConditionFormula>
    <errorDisplayField>AnnualRevenue</errorDisplayField>
    <errorMessage>Anuual Revenue required when Industry updated</errorMessage>
</ValidationRule>
